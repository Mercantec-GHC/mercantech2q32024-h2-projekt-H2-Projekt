@page "/Register"
<h3>Login</h3>



    <div class="imgcontainer">
        <img src="img/Skærmbillede 2024-09-02 110806.png" height="300px" alt="Image">
    </div>

    <div class="container">
    <label for="fname"><b>Full Name</b></label>
    <input @bind-value="FullName" type="text" placeholder="Enter First Name" name="fname" required>

        <label for="Email"><b>Email</b></label>
        <input @bind-value="Email" type="email" placeholder="Enter Email" name="Email" required>

        <label for="psw"><b>Phone Number</b></label>
        <input @bind-value="PhoneNr" type="password" placeholder="Enter Password" name="psw" required>

        <label for="psw"><b>Password</b></label>
        <input @bind-value="Password" type="password" placeholder="Enter Password" name="psw" required>

        <label for="psw-repeat"><b>Repeat Password</b></label>
        <input @bind-value="Password" type="password" placeholder="Repeat Password" name="psw-repeat" required>
    </div>

    <div class="button-container">
    <a @onclick="ReisterUser" class="register-button">Confirm</a>
    </div>




  