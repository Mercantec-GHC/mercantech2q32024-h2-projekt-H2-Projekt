@page "/profilepage/{UserId}"
@using DomainModels
@using System.Globalization
@inject HttpClient HttpClient

<h3>Your Profile</h3>

<!-- Check if there are bookings and display them -->
@if (bookings != null && bookings.Any())
{
    @foreach (DomainModels.Booking booking in bookings)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@booking.FullName</h5>
                <h6 class="card-subtitle mb-2 text-muted">@booking.Email</h6>
                <p class="card-text">Room: @booking.RoomId</p>
                <p class="card-text">Start Date: @booking.StartDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</p>
                <p class="card-text">End Date: @booking.EndDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</p>
                <a href="/editbooking/@booking.BookingId" class="btn btn-primary">Edit Booking</a>
            </div>
        </div>
    }
}
else
{
    <p>No bookings available.</p>
}

<!-- Display any error or status messages -->
@if (!string.IsNullOrEmpty(message))
{
    <p>@message</p>
}

@code {
    // List to store bookings fetched from the API
    List<DomainModels.Booking> bookings = new();

    [Parameter]
    public string UserId { get; set; }

    // Message for error or status display
    string message = "";

    // User object to represent the logged-in user
    private User user = new User();

    // Called when the page initializes
    protected override async Task OnInitializedAsync()
    {
        // Fetch the user details first (assumed you're passing userId somehow, e.g., route parameter)
        await FetchUserDetails();

        if (user != null)
        {
            // Fetch bookings for the user
            await FetchBookings();
        }
    }

    // Method to fetch the user's bookings from the API
    async Task FetchBookings()
    {
        try
        {
            // API call to fetch bookings by user email
            var response = await HttpClient.GetAsync($"api/Bookings?email={user.Email}");

            if (response.IsSuccessStatusCode)
            {
                // Deserialize response to List<DomainModels.Booking>
                bookings = await response.Content.ReadFromJsonAsync<List<DomainModels.Booking>>() ?? new List<DomainModels.Booking>();
                message = "Bookings fetched successfully.";
            }
            else
            {
                message = "Failed to fetch bookings.";
            }
        }
        catch (Exception ex)
        {
            message = $"An error occurred: {ex.Message}";
        }

        // Force UI to re-render after bookings fetch
        StateHasChanged();
    }

    // Method to fetch user details (replace with your own logic to fetch user)
    async Task FetchUserDetails()
    {
        try
        {
            // Assuming you're fetching the logged-in user's details by some identifier (userId)
            user = await HttpClient.GetFromJsonAsync<User>($"api/Users/{UserId}");

            if (user == null)
            {
                message = "Failed to fetch user details.";
            }
        }
        catch (Exception ex)
        {
            message = $"An error occurred while fetching user details: {ex.Message}";
        }
    }
}


